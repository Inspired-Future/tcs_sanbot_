<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.tcs.sanbot.view.SplashActivity"
    android:background="@drawable/sanbot_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/tcs_logo"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sanbot_img"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/sanbot_img"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_sofia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sofia"
                    android:textSize="32sp"
                    android:textColor="#ffffff"
                    android:textStyle="italic"
                    android:layout_marginBottom="25dp"
                    />

                <TextView
                    android:layout_below="@id/tv_sofia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Digital Secretary"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="125dp"
                    />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>









    <RelativeLayout
        android:id="@+id/rl_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/pb_loader"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:indicatorName="BallClipRotatePulseIndicator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_loader"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:text="Checking face detection...." />


        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:background="#000000"
            android:textStyle="bold"
            android:textColor="#ffffff"

            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            />



    </RelativeLayout>




</RelativeLayout>

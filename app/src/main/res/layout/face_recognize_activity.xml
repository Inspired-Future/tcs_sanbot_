<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.tcs.sanbot.view.SplashActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_anonymous_user"
            android:background="#000000"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Guest Face Recognition"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authentication_user"
            android:background="#000000"
            android:textColor="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="Customer Face Recognition"/>




        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking face detection...."/>
    </LinearLayout>

</LinearLayout>
